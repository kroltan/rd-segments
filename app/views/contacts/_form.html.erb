<% content_for :nav do %>
	<%= nav_to "Back", Contact %>
<% end %>

<%= form_for @contact do |f| %>

	<%= render 'form_errors', locals: {model: @contact} %>

	<div class="field">
		<%= f.label :name %>
		<%= f.text_field :name %>
	</div>
	<div class="field">
		<%= f.label :email %>
		<%= f.email_field :email %>
	</div>
	<div class="field">
		<%= f.label :age %>
		<%= f.text_field :age %>
	</div>
	<div class="field">
		<%= f.label :state_id %>
		<%= f.select :state_id, State.all.order(:name).collect {|s|
				[s.name, s.id]} %>
	</div>
	<div class="field">
		<%= f.label :role %>
		<%= f.text_field :role %>
	</div>
	<div class="field">
		<%= f.submit %>
	</div>
<% end %>